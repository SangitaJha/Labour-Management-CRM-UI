# Production Environment for Hostinger
PORT=3000
NODE_ENV=production
FRONTEND_URL=https://yourdomain.com

# MySQL (Hostinger hPanel or VPS MySQL)
DB_HOST=your-db-host
DB_PORT=3306
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_NAME=labour_attendance_db
DB_DIALECT=mysql

# JWT
JWT_SECRET=change_this_in_production
JWT_EXPIRY=7d

# Session
SESSION_SECRET=another_secret_here
SESSION_TIMEOUT=3600

# Locale
TIMEZONE=Asia/Kolkata
CURRENCY=INR
DATE_FORMAT=YYYY-MM-DD
TIME_FORMAT=HH:mm

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
